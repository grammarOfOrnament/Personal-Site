---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

---

<head>
    <title>{SITE_TITLE}</title>

	<!-- Links -->
	<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
	<link rel="stylesheet" href="https://use.typekit.net/krc6hll.css">
	
</head>
<body>
<!--  Navbar    -->
<nav>
	<div class="logo">
	  <a href="/"> {SITE_TITLE} </a>
	</div>
	<div class="toggle">
	  <a href="#"><ion-icon name="menu-outline"></ion-icon></a>
	</div>
	<ul class="menu">
	  	<li>
		</li>
	  	<li>
			<a href="#works-section" class="menuLink">Works</a>
		</li>
	  	<!-- <li>
			<HeaderLink href="/services">Services</HeaderLink>
		</li> -->
	  	<li>
			<HeaderLink href="#about-me-section" class="menuLink">About</HeaderLink>
		</li>
		<li>
			<HeaderLink href="#contact-section" class="menuLink">Contact</HeaderLink>
	  	</li>
	</ul>
  </nav>

<!-- Toggle for Mobile Navbar Menu -->
<script>
	const toggle = document.querySelector('.toggle');
	const menu = document.querySelector('.menu');
	const toggleLink = toggle.querySelector('a');
	const allMenuLinks = document.querySelectorAll('.menuLink');

	window.addEventListener('DOMContentLoaded', () => {
	
	toggle.addEventListener('click', () => {
		if (menu.classList.contains('active')) {
			menu.classList.remove('active');
			toggleLink.innerHTML = "<ion-icon name='menu-outline'></ion-icon>";
		} else {
			menu.classList.add('active');
			toggleLink.innerHTML = "<ion-icon name='close-outline'></ion-icon>";
		}
	});
});

	allMenuLinks.forEach(menuLink => {
	menuLink.addEventListener('click', () => {
			console.log("click heard!");
			if (menu.classList.contains('active')) {
				menu.classList.remove('active');
				toggleLink.innerHTML = "<ion-icon name='menu-outline'></ion-icon>";
			} else {
				menu.classList.add('active');
				toggleLink.innerHTML = "<ion-icon name='close-outline'></ion-icon>";
			}
		});
	})	
  </script>

</body>

